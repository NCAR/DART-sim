FC = mpif90
FFLAGS = -g -O0 -C -check noarg_temp_created  \
         -ftrapuv -traceback \

EXE = bcaster.sim

# default target
.DEFAULT_GOAL := all

## help: print help
.PHONY : help
help :
	@sed -n 's/^##/   /p' $(MAKEFILE_LIST); echo ""

## all: build everything
all: $(EXE)

## bcaster.sim: sequential_obs do broadcast simulator
bcaster.sim: main.f90
	$(FC) $(FFLAGS) main.f90 -o bcaster.sim

## clean: remove autogenerated files
.PHONY : clean
clean:
	rm -f *.o *.mod $(EXE)

